<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    app:circularflow_defaultRadius="@dimen/cardview_compat_inset_shadow"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="7dp"
        android:id="@+id/cv_quote"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/app_base_color"
        android:layout_marginBottom="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:padding ="5dp"
                android:textStyle="italic"
                android:id="@+id/tv_quotes"
                tools:text="You make your own luck if you stay at it long enough."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:textSize="17sp" />

            <TextView
                android:padding ="5dp"
                android:id="@+id/tv_author"
                android:layout_gravity="end"
                tools:text="Naval Ravikant"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>